<section class="jumbotron text-center bg-white">
  <div class="container">

    <h2 class="border-bottom">ユーザー新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-group">
        <div><%= f.label :name, "ユーザー名" %></div>
        <%= f.text_field :name, autofocus: true, class: 'w-50' %>
      </div>

      <div class="form-group">
        <div><%= f.label :email, "メールアドレス" %><div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-50' %>
      </div>

      <div class="form-group">
        <div><%= f.label :hourly_pay, "時給" %></div>
        <%= f.number_field :hourly_pay, autofocus: true, autocomplete: "hourly_pay", class: 'w-50' %>
      </div>

      <div class="form-group">
        <div><%= f.label :password %>
        <% if @minimum_password_length %>
        (<%= @minimum_password_length %> characters minimum)
        <% end %></div>
        <%= f.password_field :password, autocomplete: "new-password", class: 'w-50' %>
      </div>

      <div class="form-group">
        <div><%= f.label :password_confirmation %></div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-50' %>
      </div>

      <div class="actions">
        <%= f.submit "会員登録する", class: "btn btn-primary" %>
      </div>


    <% end %>

    <div class="border-top">
      <%= render "users/shared/links" %>
    </div>

  </div>
</section>
